<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <!-- This is to deal with a bug in AppCompat                    -->
        <!-- https://code.google.com/p/android/issues/detail?id=170076  -->
        <item name="dividerVertical">?android:attr/listDivider</item>
        <item name="dividerHorizontal">?android:attr/listDivider</item>
    </style>

    <style name="TextAppearance.ListItem.Title" parent="TextAppearance.AppCompat.Subhead" />
    <style name="TextAppearance.ListItem.SubTitle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    <style name="TextAppearance.ListItem.Header" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

</resources>
